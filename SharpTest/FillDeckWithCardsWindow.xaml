<Window x:Class="SharpTest.EnterCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpTest"
        mc:Ignorable="d"
        Title="Fill the new deck" Height="409.416" Width="350" ResizeMode="NoResize" Icon="icon.png">
    <Grid>
        <TextBox Name="wordBox" HorizontalAlignment="Left" Height="23" Margin="68,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" TextChanged="WordTextBoxChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="68,118,0,0" TextWrapping="Wrap" Text="Word:" VerticalAlignment="Top" Width="201"/>
        <TextBox Name="translationBox" HorizontalAlignment="Left" Height="23" Margin="68,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" TextChanged="TranslationTextBoxChanged"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Translation:" VerticalAlignment="Top" Margin="68,219,0,0" Width="201"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="68,312,0,0" VerticalAlignment="Top" Width="201" Height="27" Click="ClickSave" IsDefault="True"/>

    </Grid>
</Window>
